<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.narlab.projectnar.AuthenticatorActivity"
	android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:text="@string/prompt_email"
		android:editable="false"
		android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	<com.beardedhen.androidbootstrap.BootstrapEditText
		android:id="@+id/auth_username"
		bootstrapbutton:be_state="success"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding_large"
		android:text="test@t.com"/>

	<com.beardedhen.androidbootstrap.BootstrapEditText
		android:text="@string/prompt_password"
		android:editable="false"
		android:focusable="false"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<com.beardedhen.androidbootstrap.BootstrapEditText
		android:id="@+id/auth_password"
		bootstrapbutton:be_state="success"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding_large"
		android:text="tttttt"/>

	<com.beardedhen.androidbootstrap.BootstrapButton
		android:id="@+id/auth_btn_reg"
		android:text="@string/user_auth_btn_register"
		bootstrapbutton:bb_type="success"
		bootstrapbutton:bb_roundedCorners="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"/>

</LinearLayout>
