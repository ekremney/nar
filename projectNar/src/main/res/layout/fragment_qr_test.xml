<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="net.narlab.projectnar.QRFragment">
	
	<ImageView 
	    android:id="@+id/qrimg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="50dp"/>
	<TextView
		android:id="@+id/qrtv1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/qrtv2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<!-- basic button -->
	<com.beardedhen.androidbootstrap.BootstrapButton
		android:id="@+id/qr_scan_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="@string/qr_scan_btn"
		bootstrapbutton:bb_icon_right="fa-qrcode"
		bootstrapbutton:bb_type="success"
		bootstrapbutton:bb_roundedCorners="true"
		android:layout_gravity="center"
		android:textSize="16sp"
		android:onClick="onScanQRCodeBtnClick"
	/>
    <!-- basic button -->
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/qr_scan_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/qr_scan_btn"
        bootstrapbutton:bb_icon_right="fa-qrcode"
        bootstrapbutton:bb_type="success"
        bootstrapbutton:bb_roundedCorners="true"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:onClick="onScanQRCodeWIntentBtnClick"
        />
    <!-- Format here -->
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/qr_scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="format"
        bootstrapbutton:bb_type="success"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:editable="false"
        />
    <!-- Result here -->
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/qr_scan_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="result"
        bootstrapbutton:bb_type="success"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:editable="false"
        />

</LinearLayout>
